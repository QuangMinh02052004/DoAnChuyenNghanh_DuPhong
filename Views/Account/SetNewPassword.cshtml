@using Bloomie.Data
@model ApplicationUser

<h2>Đặt mật khẩu mới</h2>
<p>Bạn vừa đăng nhập bằng Google/Facebook. Vui lòng đặt mật khẩu để sử dụng cho đăng nhập thủ công.</p>
<form asp-action="SetNewPassword" method="post">
    <input type="hidden" asp-for="Email" value="@ViewBag.Email" />
    <input type="hidden" asp-for="Token" value="@ViewBag.Token" />
    <div class="form-group">
        <label asp-for="PasswordHash">Mật khẩu mới</label>
        <input asp-for="PasswordHash" class="form-control" type="password" />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Xác nhận</button>
</form>